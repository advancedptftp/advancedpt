@model DataLayer.Models.tblTKneeBraceCustomForm

@{
    ViewBag.Title = "Edit";
}

<section class="bodyinner">
    @using (Html.BeginForm("Approve", "KneeBraceCustomForm", FormMethod.Post, new { name = "Approve", id = "Approve" }))
    {
        @Html.AntiForgeryToken()
        <div class="bodyleft">

            @Html.Partial("~/Views/Shared/_LeftPart.cshtml")
        </div>
        @Html.ValidationSummary(true)
        <div class="bodyright">

            <div class="report-form clearfix">
                <h2>BREG Custom Knee Brace Order Form (HCPCS Code: L1846)</h2>
                <div class="p_bot15"><strong>*MEDICARE PATIENTS: DO NOT PROCEED IF THEY HAVE BEEN ISSUED A ‘KNEE BRACE’ IN THE PAST 5 YEARS.</strong></div>

                <hr>
                @Html.HiddenFor(m => m.CreatedBy)
                @Html.HiddenFor(e => e.KneeBraceCustomForm_Id)
                @Html.Hidden("HCPCSCode", "L1846")
                <div id="dvFirst">

                    <h3>Description:</h3>
                    <div class="row p_bot20">
                        <div class="col-sm-6">
                            <div class="p_bot05">
                                <label class="checkbox-inline">
                                    @Html.CheckBox("IsCustomOAMedialOffLoader_01208", new { @class = "checkbox-inline" })
                                    01208 Custom OA Medial Off-Loader
                                </label>
                            </div>
                            <div class="p_bot05">
                                <label class="checkbox-inline">
                                    @Html.CheckBox("IsCustomOALateralOffLoader_01300", new { @class = "checkbox-inline" })
                                    01300 Custom OA Lateral Off-Loader
                                </label>
                            </div>
                            <div class="p_bot05">
                                <label class="checkbox-inline">
                                    @Html.CheckBox("IsCustomLigamentBrace_01207", new { @class = "checkbox-inline" })
                                    01207 Custom Ligament Brace
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="rightgray">
                                <h4>L1846 Code Includes the Following:</h4>
                                <ul>
                                    <li>Orthosis</li>
                                    <li>All Straps, Closures and Padding</li>
                                    <li>Fitting & Adjustment</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <h3>Fitting</h3>
                    <div class="row">
                        <div class="col-sm-9">
                            <div class="borderbox">
                                <div class="row innerborder">
                                    <div class="col-sm-5 p_top10"><strong>1. Thigh Circumference:</strong></div>
                                    <div class="col-sm-7">

                                        <div class="form-group">
                                            @Html.TextBoxFor(m => m.Fitting_ThighCircumference, new { @class = "form-control shortfield" })
                                            <label for="exampleInputName2" class=" p_left10">inches (6 inches above mid-patella)</label>

                                        </div>

                                    </div>
                                </div>
                                <div class="row innerborder">
                                    <div class="col-sm-5 p_top10"><strong>2. Calf Circumference:</strong></div>
                                    <div class="col-sm-7">

                                        <div class="form-group">
                                            @Html.TextBoxFor(m => m.Fitting_CalfCircumference, new { @class = "form-control shortfield" })
                                            <label for="exampleInputName2" class=" p_left10">inches (6 inches below mid-patella)</label>

                                        </div>

                                    </div>
                                </div>
                                <div class="row innerborder">
                                    <div class="col-sm-5 p_top10"><strong>3. Knee Offset:</strong></div>
                                    <div class="col-sm-7">

                                        <div class="form-group">
                                            @Html.TextBoxFor(m => m.Fitting_KneeOffset, new { @class = "form-control shortfield" })
                                            <label for="exampleInputName2" class=" p_left10">inches (push in plunger on tool)</label>

                                        </div>

                                    </div>
                                </div>
                                <div class="row innerborder">
                                    <div class="col-sm-5 p_top10"><strong>4. Knee Width:</strong></div>
                                    <div class="col-sm-7">

                                        <div class="form-group">
                                            @Html.TextBoxFor(m => m.Fitting_KneeWidth, new { @class = "form-control shortfield" })
                                            <label for="exampleInputName2" class=" p_left10">inches (use width caliper)</label>

                                        </div>

                                    </div>
                                </div>

                            </div>

                            <div class="borderbox">
                                <div class="row">
                                    <div class="col-md-3 col-sm-12"><strong>Circle</strong></div>
                                    <div class="col-md-9 col-sm-12">
                                        <span class=" p_rig30">
                                            <label class="radio-inline"><input name="optradio" type="radio">@Html.RadioButtonFor(m => m.CirclePosition, "RIGHT")RIGHT</label>
                                            <label class="radio-inline">@Html.RadioButtonFor(m => m.CirclePosition, "LEFT")LEFT</label>

                                        </span>
                                    </div>
                                    <div class="col-md-3 col-sm-12"><strong>Gender</strong> </div>
                                    <div class="col-md-9 col-sm-12">

                                        <span class="p_rig25">
                                            <label class="radio-inline">@Html.RadioButtonFor(m => m.Gender, "M")Male</label>
                                            <label class="radio-inline">@Html.RadioButtonFor(m => m.Gender, "F")Female</label>

                                        </span>
                                    </div>
                                </div>
                            </div>


                        </div>
                        <div class="col-sm-3"><img src="@Url.Content("~/Images/pic1.png")" alt="" /></div>
                    </div>
                    <div class="subbutt">
                        <button type="button" class="btn btn-orange pull-right" onclick="GotoSecondPanel()">Next Step</button>
                        <div class="clearfix"></div>



                    </div>
                    <hr>
                </div>






                <div id="dvSecond" class="secondstep">

                    <h3>To-Do-List</h3>

                    <div class="row">
                        <div class="col-sm-6 col-md-4 form-group">
                            <label>Patient Name</label>
                            @Html.DisplayFor(m => m.Patient_Name, new { @class = "form-control" })

                        </div>
                        <div class="col-sm-6 col-md-4 form-group">
                            <label for="date">DOB</label>
                            @Html.Display("DOB", Model.DOB.HasValue ? Model.DOB.Value.ToShortDateString() : "", new { @class = "form-control datepicker datepicker-bg", style = "width:100%;" })
                            
                        </div>
                    </div>


                    <div class="row">

                        <div class="col-sm-12 col-md-6">
                            <div class="todo_inner">
                                <div class="outerf">
                                    <div class="stepheading"><strong>1. Office Staff </strong> <i>(MC preapproval only)</i></div>
                                    <div class="hiddenform">
                                        <div class="row">
                                            <div class="col-sm-12 col-md-12 form-group">
                                                <label class="checkbox-inline"><input name="optradio" type="checkbox">Verify Insurance Prior to Proceeding with MC</label>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="row form-group">
                                                <div class="col-sm-5 p_top10">
                                                    Patient’s MC#:
                                                </div>
                                                <div class="col-sm-7">
                                                    @Html.DisplayFor(model => model.PatientMC, new { @class = "form-control" })

                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col-sm-7">Check Driver’s License Region C:</div>
                                                <div class="col-sm-5">
                                                    <label class="radio-inline">@Html.RadioButtonFor(model => model.IsCheckDriversLicenseRegionC, "1")YES</label>
                                                    <label class="radio-inline">@Html.RadioButtonFor(model => model.IsCheckDriversLicenseRegionC, "0")NO</label>

                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col-sm-12">
                                                    Call MC Rep: 1-866-270-4909 Tax ID: 13056<br>
                                                    PTAN#: 6240770001 NPI: 1265657555 REGION C<br>
                                                    Confirm: “No L1846, etc. past 5 yrs.” SEE REF GUIDE
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col-sm-5 p_top10">MC Rep Name:</div>
                                                <div class="col-sm-7">
                                                    @Html.DisplayFor(model => model.MC_RepName, new { @class = "form-control" })

                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col-sm-4 p_top10">MC Rep Badge#:</div>
                                                <div class="col-sm-4">
                                                    @Html.DisplayFor(model => model.MC_BadgeNo, new { @class = "form-control" })

                                                </div>
                                                <div class="col-sm-1 p_top10">Int:</div>
                                                <div class="col-sm-3">
                                                    @Html.DisplayFor(model => model.MC_Int, new { @class = "form-control" })

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="outerf">
                                    <div class="stepheading"><strong>2. Clinical Staff </strong> <i>prescription</i></div>
                                    <div class="hiddenform">
                                        <div class="row">
                                            <div class="col-sm-12 col-md-12 form-group">
                                                <label class="checkbox-inline">
                                                    <input name="optradio" type="checkbox">Diagnosis
                                                </label>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="row form-group">
                                                <div class="col-sm-12">
                                                    @Html.DisplayFor(model => model.Diagnosis_Desc, new { @class = "form-control" })

                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-12 col-md-12 form-group">
                                                <label class="checkbox-inline">
                                                    <input name="optradio" type="checkbox">Item Requested By
                                                </label>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="p_left15">
                                                <label class="checkbox-inline"><input name="optradio" type="checkbox">Therapist</label>
                                                <div class="row">
                                                    <div class="col-sm-12 col-md-12 form-group p_top10">
                                                        @Html.DisplayFor(model => model.Therapist_Name, new { @class = "form-control" })

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="p_left15">
                                                <label class="checkbox-inline">
                                                    <input name="optradio" type="checkbox">Patient
                                                </label>
                                            </div>
                                            <div class="p_left15">
                                                <label class="checkbox-inline">
                                                    <input name="optradio" type="checkbox">Doctor
                                                </label>
                                                <div class="row">
                                                    <div class="col-sm-12 col-md-12 form-group p_top10">
                                                        @Html.DisplayFor(model => model.Doctor_Name, new { @class = "form-control" })

                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-12 col-md-12 form-group">
                                                <label class="checkbox-inline">
                                                    @Html.CheckBox("IsCompleLetterOfMedNec", new { @class = "checkbox-inline" }) Complete
                                                    <strong>Letter of Medical Necessity</strong>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="p_left15">
                                            <div class="row form-group">
                                                <div class="col-sm-3 p_top10">Int</div>
                                                <div class="col-sm-5">
                                                    @Html.DisplayFor(model => model.CompleLetterOfMedNec_Int, new { @class = "form-control" })

                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12 col-md-12 form-group">
                                                <label class="checkbox-inline">
                                                    @Html.CheckBox("IsGiveFromLetterOfMedNec", new { @class = "checkbox-inline" })
                                                    Give FORM & LETTER of Med.Nec. to Office Staff
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-12 col-md-6">
                            <div class="todo_inner">
                                <div class="outerf">
                                    <div class="stepheading"><strong>3. Office Staff </strong> <i>order</i></div>
                                    <div class="hiddenform">
                                        <div class="row">
                                            <div class="col-sm-12 col-md-12 form-group">
                                                <label class="checkbox-inline">
                                                    @Html.CheckBox("IsFAXLetterOfMedNec", new { @class = "checkbox-inline" }) Fax Letter of Med.Nec.
                                                </label>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="row form-group">
                                                <div class="col-sm-3 p_top10">Date</div>
                                                <div class="col-sm-5">
                                                    @Html.Display("FAXLetterOfMedNec_Date", Model.FAXLetterOfMedNec_Date.HasValue ? Model.FAXLetterOfMedNec_Date.Value.ToShortDateString() : "", new { @class = "form-control datepicker datepicker-bg", style = "width:100%;" })


                                                   
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-12 col-md-12 form-group">
                                                <label class="checkbox-inline">
                                                    @Html.CheckBox("IsRecivedLetterOfMedNec", new { @class = "checkbox-inline" }) Receive Letter of Med.Nec.
                                                </label>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="row form-group">
                                                <div class="col-sm-3 p_top10">Date</div>
                                                <div class="col-sm-5">
                                                    @Html.Display("ReceivedLetterOfMedNec_Date", Model.ReceivedLetterOfMedNec_Date.HasValue ? Model.ReceivedLetterOfMedNec_Date.Value.ToShortDateString() : "", new { @class = "form-control datepicker datepicker-bg", style = "width:100%;" })

                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-12 col-md-12 form-group">
                                                <label class="checkbox-inline">
                                                    @Html.CheckBox("IsOrderOrthosis", new { @class = "checkbox-inline" }) Order Orthosis
                                                </label>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="row form-group">
                                                <div class="col-sm-3 p_top10">Date</div>
                                                <div class="col-sm-5">
                                                    @Html.Display("OrderOrthosis_Date", Model.OrderOrthosis_Date.HasValue ? Model.OrderOrthosis_Date.Value.ToShortDateString() : "", new { @class = "form-control datepicker datepicker-bg", style = "width:100%;" })

                                                </div>
                                            </div>
                                        </div>

                                        <div class="row p_top15">
                                            <div class="col-sm-12 col-md-12 form-group">

                                                Ph# 800-321-0607 Acct#: 23298 <br>
                                                Use Individual Office Login & Password<br>
                                                <div class="row form-group">
                                                    <div class="col-sm-5 p_top10">Confirmation#</div>
                                                    <div class="col-sm-7">
                                                        @Html.DisplayFor(model => model.ConfimationNo, new { @class = "form-control" })

                                                    </div>
                                                </div>
                                                PO#: Last Name of the Patient
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="outerf">
                                    <div class="stepheading"><strong>4. Office Staff </strong> <i>paperwork</i></div>

                                    <div class="row p_top15">
                                        <div class="col-sm-3 p_top10">Int</div>
                                        <div class="col-sm-4">

                                            <input class="form-control" id="" type="text">

                                        </div>
                                    </div>


                                    <div class="hiddenform">
                                        <div class="row">
                                            <div class="col-sm-12 col-md-12 form-group">
                                                <label class="checkbox-inline">

                                                    <input name="optradio" type="checkbox">Delivery Ticket complete, pt signs, give pt carbon copy

                                                </label>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12 col-md-12 form-group">
                                                <label class="checkbox-inline">

                                                    <input name="optradio" type="checkbox">AOB complete, pt signs, give pt carbon copy

                                                </label>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12 col-md-12 form-group">
                                                <label class="checkbox-inline">

                                                    <input name="optradio" type="checkbox">Check List complete with staff initials, pt signs, keep in chart

                                                </label>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12 col-md-12 form-group">
                                                <label class="checkbox-inline">

                                                    <input name="optradio" type="checkbox">HIPPA #1 complete, pt signs, keep in chart

                                                </label>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12 col-md-12 form-group">
                                                <label class="checkbox-inline">

                                                    <input name="optradio" type="checkbox">HIPPA #2 give to pt

                                                </label>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12 col-md-12 form-group">
                                                <label class="checkbox-inline">

                                                    <input name="optradio" type="checkbox">Protocol for Complaints give to pt

                                                </label>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12 col-md-12 form-group">
                                                <label class="checkbox-inline">

                                                    <input name="optradio" type="checkbox">MC DMEPOS Supplier Standards give to pt

                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>


                    <div class="row">
                        <div class="col-sm-12 col-md-12">
                            <div class="todo_inner">
                                <div class="outerf">
                                    <div class="stepheading"><strong>5. Clinical & Office Staff </strong> <i>deliver</i></div>
                                    <div class="hiddenform">
                                        <div class="row">
                                            <div class="col-sm-12 col-md-12 form-group">
                                                <label class="checkbox-inline">
                                                    @Html.CheckBox("IsReceivedOrthosis", new { @class = "checkbox-inline" }) Received Orthosis
                                                </label>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="p_left15 p_bot15">
                                                <div class="row">
                                                    <div class="col-sm-1 p_top10">Date</div>
                                                    <div class="col-sm-3">
                                                        @Html.Display("ReceivedOrthosis_Date", Model.ReceivedOrthosis_Date.HasValue ? Model.ReceivedOrthosis_Date.Value.ToShortDateString() : "", new { @class = "form-control datepicker datepicker-bg", style = "width:100%;" })

                                                    </div>
                                                    <div class="col-sm-1 p_top10">By</div>
                                                    <div class="col-sm-3">
                                                        @Html.DisplayFor(model => model.ReceivedOrthosisBy, new { @class = "form-control" })

                                                    </div>
                                                    <div class="col-sm-4 p_top10">
                                                        Condition:
                                                        <label class="radio-inline">@Html.RadioButtonFor(model => model.ConditionReceived, "Good")Good</label>
                                                        <label class="radio-inline">@Html.RadioButtonFor(model => model.ConditionReceived, "Bad")Bad</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12 col-md-12 form-group">
                                                <label class="checkbox-inline">
                                                    @Html.CheckBox("IsFitInstructed", new { @class = "checkbox-inline" })Fit & Instructed
                                                </label>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="p_left15 p_bot15">
                                                <div class="row">
                                                    <div class="col-sm-1 p_top10">Date</div>
                                                    <div class="col-sm-3">
                                                        @Html.Display("FitInstructed_Date", Model.FitInstructed_Date.HasValue ? Model.FitInstructed_Date.Value.ToShortDateString() : "", new { @class = "form-control datepicker datepicker-bg", style = "width:100%;" })

                                                    </div>
                                                    <div class="col-sm-1 p_top10">By</div>
                                                    <div class="col-sm-3">
                                                        @Html.DisplayFor(model => model.FitInstructedBy, new { @class = "form-control" })

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12 col-md-12 form-group">
                                                <label class="checkbox-inline">
                                                    @Html.CheckBox("IsCompletePaperWork", new { @class = "checkbox-inline" }) Complete Paperwork
                                                </label>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="p_left15 p_bot15">
                                                <div class="row">
                                                    <div class="col-sm-1 p_top10">Date</div>
                                                    <div class="col-sm-3">
                                                        @Html.Display("CompletePaperWork_Date", Model.CompletePaperWork_Date.HasValue ? Model.CompletePaperWork_Date.Value.ToShortDateString() : "", new { @class = "form-control datepicker datepicker-bg", style = "width:100%;" })

                                                    </div>
                                                    <div class="col-sm-1 p_top10">By</div>
                                                    <div class="col-sm-3">
                                                        @Html.DisplayFor(model => model.CompletePaperWorkBy, new { @class = "form-control" })

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="subbutt">
                        <button type="button" class="btn btn-primary pull-left" onclick="GotoFirstPanel()">Back</button>
                        @if (Model.ApprovedBy == null)
                        {
                            <button type="submit" class="btn btn-orange pull-right">Approve</button>
                        }
                        <div class="clearfix"></div>



                    </div>


                </div>



            </div>

        </div>

        <div class="clearfix"></div>
    }
</section>
<script type="text/javascript">
    $(document).ready(function () {
        $("#dvSecond").hide();
    });

    function GotoSecondPanel() {
        $("#dvFirst").hide();
        $("#dvSecond").show();
    }

    function GotoFirstPanel() {
        $("#dvFirst").show();
        $("#dvSecond").hide();
    }

</script>