        <div style="padding:0 0 20px 0;">
            <table width="100%" border="0">
                    <tr>
                        <td width="9%">@Html.RadioButtonFor(m => m.KneeBraceCustomForm.CirclePosition, "RIGHT", new { @disabled = "disabled" })&nbsp;Right</td>
                        <td width="8%">@Html.RadioButtonFor(m => m.KneeBraceCustomForm.CirclePosition, "LEFT", new { @disabled = "disabled" })&nbsp;Left</td>
                        <td width="17%"><input type="radio" disabled="disabled">&nbsp;Do Do Not Substitute</td>
                    </tr>
            </table>

        </div>
            <div style="padding:0 0 20px 0;">
                <table width="100%" border="0">
                    <tr>
                        <td width="25%">Previous Treatment(s)/Medications:</td>
                        <td width="19%"><input type="checkbox">&nbsp;Prior Surgery</td>
                        <td width="24%"><input type="checkbox">&nbsp;NSAIDS/Pain Medications</td>
                        <td width="19%"><input type="checkbox">&nbsp;Physical Therapy</td>
                        <td width="13%"><input type="checkbox">&nbsp;Injections</td>
                    </tr>
                </table>

            </div>
            <div style="padding:0 0 20px 0;">
                <table width="100%" border="0">
                    <tr>
                        <td width="11%">Physician Name</td>
                        <td width="28%" style="padding:0 0 10px 0; border-bottom:1px solid #231f20;">&nbsp;</td>
                        <td width="6%" style="padding-left:20px;">NPI</td>
                        <td width="27%" style="padding:0 0 10px 0; border-bottom:1px solid #231f20;">&nbsp;</td>
                        <td width="7%" style="padding-left:20px;">Phone</td>
                        <td width="21%" style="padding:0 0 10px 0; border-bottom:1px solid #231f20;">&nbsp;</td>
                    </tr>
                </table>


            </div>
            <div style="padding:0 0 20px 0;">
                <table width="100%" border="0">
                    <tr>
                        <td width="18%">Physician Signature</td>
                        <td width="54%" style="padding:0 0 10px 0; border-bottom:1px solid #231f20;">&nbsp;</td>
                        <td width="7%" style="padding-left:20px;">Date</td>
                        <td width="21%" style="padding:0 0 10px 0; border-bottom:1px solid #231f20;">&nbsp;</td>
                    </tr>
                </table>


            </div>

