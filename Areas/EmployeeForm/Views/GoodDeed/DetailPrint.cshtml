@using DataLayer;

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>myadvancedpt.com</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link rel="shortcut icon" href="favicon.png">
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>

    <!-- Bootstrap core CSS -->


</head>

<body>


    <div style="width:700px; margin:0 auto; padding:5px 0; font-family:verdana; font-size:13px; color:#333;">


        <div style="padding:0 0 20px 0;">
            <table width="100%" border="0">
                <tr>
                    <td width="39%">
                        <h2 style="padding:0; font-size:20px; margin:0;">
                            Good Deed Report Form<br>
                            <span style="font-size:15px; font-weight:normal;">Heal At Home Healthcare</span>
                        </h2>
                    </td>
                    <td width="61%"><div style="padding:10px; text-align:center; border:2px dashed #333; font-size:13px; font-weight:bold;">CONFIDENTIAL REPORT: SUBMIT ORIGINAL TO THE DIRECTOR OF NURSING WITHIN 24 HOURS OF INCIDENT. DO NOT SCAN OR COPY.</div></td>
                </tr>
            </table>

        </div>
        <div style="padding:0 0 5px 0;">
            <table width="100%" border="0">
                <tr>
                    <td width="48%" style="padding-right:10px;">
                        <div style="padding:8px 0 8px 0; border-bottom:1px solid #333; margin-bottom:5px; min-height:20px;">@Model.TodaysDate</div>
                        Today's Date
                    </td>
                    <td width="52%" style="padding-right:10px;" valign="top">
                        <div style="padding:8px 0 8px 0; border-bottom:1px solid #333; margin-bottom:5px; min-height:20px;">@ViewBag.Location
                        </div>
                        Office Location
                    </td>
                </tr>
            </table>

        </div>
        <div style="padding:0 0 5px 0;">
            <table width="100%" border="0">
                <tr>
                    <td width="37%" style="padding-right:10px;">
                        <div style="padding:8px 0 8px 0; border-bottom:1px solid #333; margin-bottom:5px; min-height:20px;">@Model.EmpFirstName</div>
                        Employee First Name
                    </td>
                    <td width="32%" style="padding-right:10px;">
                        <div style="padding:8px 0 8px 0; border-bottom:1px solid #333; margin-bottom:5px; min-height:20px;">@Model.EmpLastName</div>
                        Employee Last Name
                    </td>
                    <td width="31%" style="padding-right:10px;" valign="top">
                        <div style="padding:8px 0 8px 0; border-bottom:1px solid #333; margin-bottom:5px; min-height:20px;">@Model.JobTitle</div>
                        Job Title
                    </td>
                </tr>
            </table>

        </div>
        <div style="padding:0 0 5px 0;">
            <table width="100%" border="0">
                <tr>

                    <td width="31%" style="padding-right:10px;" valign="top">
                        <div style="padding:8px 0 8px 0; border-bottom:1px solid #333; margin-bottom:5px; min-height:20px;">@Model.GoodDeedPerformed</div>
                        @*<div style="padding:8px 0 8px 0; border-bottom:1px solid #333; margin-bottom:5px; min-height:20px;"></div>*@
                        Provide details of the good deed preformed
                    </td>
                </tr>
            </table>

        </div>
        <div style="padding:0 0 5px 0;">
            <table width="100%" border="0">
                <tr>
                    <td width="29%" style="padding-right:10px;">
                        <div style="padding:8px 0 8px 0; border-bottom:1px solid #333; margin-bottom:5px; min-height:20px;">@Model.WitnessFirstLastName</div>
                        Witness First & Last Name
                    </td>
                    <td width="37%" style="padding-right:10px;">
                        <div style="padding:8px 0 8px 0; border-bottom:1px solid #333; margin-bottom:5px; min-height:20px;">@Model.GoodDeedDt</div>
                        Date When Good Deed Happened
                    </td>
                    <td width="34%" style="padding-right:10px;" valign="top">
                        <div style="padding:8px 0 8px 0; border-bottom:1px solid #333; margin-bottom:5px; min-height:20px;">@Model.GoodDeedTm</div>
                        Time When Good Deed Happened
                    </td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>































