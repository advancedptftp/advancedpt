@model DataLayer.Models.tblTGoodDeedForm

@{
    ViewBag.Title = "Details";
}

<section class="bodyinner">
    <div class="container">
        <div class="bodyleft">

            @Html.Partial("~/Views/Shared/_LeftPart.cshtml")
        </div>
        <div class="bodyright">

            <div class="report-form clearfix">
                <h2>GoodDeed report Form</h2>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.GoodDeed_Id)
                    @Html.Hidden("ModifiedOn", DateTime.Now)
                    @Html.HiddenFor(model => model.CreatedOn)
                    @Html.HiddenFor(model => model.CreatedBy)
                    if (ViewBag.Error != null)
                    {
                        @Html.Raw(ViewBag.Error)
                    }
                    <div class="row">
                        <div class="col-sm-6 col-md-6 form-group">
                            @Html.Label("Today's Date")
                            @Html.TextBoxFor(model => model.TodaysDate, new { @class = "form-control", style = "width:100%;", @Value = DateTime.Now.ToString("MM/dd/yyyy"), @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.TodaysDate)
                        </div>

                        <div class="col-sm-6 col-md-6 form-group">


                            @Html.Label("Office Location")
                            @Html.DropDownList("OfficeLocation")
                            @Html.ValidationMessageFor(model => model.OfficeLocation)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-md-4 form-group">
                            @Html.Label("Employee First Name")
                            @Html.TextBoxFor(model => model.EmpFirstName, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.EmpFirstName)
                        </div>
                        <div class="col-sm-6 col-md-4 form-group">
                            @Html.Label("Employee Last Name")
                            @Html.TextBoxFor(model => model.EmpLastName, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.EmpLastName)
                        </div>
                        <div class="col-sm-6 col-md-4 form-group">
                            @Html.Label("Job Title")
                            @Html.TextBoxFor(model => model.JobTitle, new { @class = "form-control", @readonly = "readonly" })

                            @Html.ValidationMessageFor(model => model.JobTitle)
                        </div>

                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-12 col-md-12 form-group">
                            @Html.Label("Provide details of the good deed preformed")
                            @Html.TextAreaFor(model => model.GoodDeedPerformed, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.GoodDeedPerformed)
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-md-4 form-group">
                            @Html.Label("Witness First & Last Name")
                            &nbsp;&nbsp;
                            @Html.TextBoxFor(model => model.WitnessFirstLastName, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.WitnessFirstLastName)
                        </div>
                        <div class="col-sm-6 col-md-4 form-group">
                            @Html.Label("Date When Good Deed Happened")

                            @Html.TextBoxFor(model => model.GoodDeedDt, new { @class = "form-control ", placeholder = "mm/dd/yyyy", style = "width:100%;", @Value = DateTime.Now.ToString("MM/dd/yyyy"), @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.GoodDeedDt)
                        </div>
                        <div class="col-sm-6 col-md-4 form-group">
                            @Html.Label("Time When Good Deed Happened")
                            @Html.TextBoxFor(model => model.GoodDeedTm, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.GoodDeedTm)
                        </div>

                    </div>
                    <hr>



                    @*<div class="subbutt">
                        <input type="submit" value="Approve" class="btn btn-orange pull-right" id="btnapprov" />


                        <div class="clearfix"></div>
                    </div>*@
                    <p>@Html.ActionLink("Back to List", "Index")</p>
                }
            </div>



        </div>
        <div class="clearfix"></div>
    </div>
</section>


<script>
    $('#OfficeLocation').addClass('form-control'); $('#OfficeLocation').attr('disabled', 'disabled');
</script>
