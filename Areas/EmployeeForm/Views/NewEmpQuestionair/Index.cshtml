                        <td class="tdList_Edit">
                            @if (item.ApprovedBy == null)
                            {
                                <a href="@Url.Action("Edit", "NewEmpQuestionair", new { id = item.EmpQuestionair_Id })">
                                    <i class="fa fa-edit" aria-hidden="true"></i>
                                </a>
                            }
                        </td>
                        <td class="tdList_Details">

                            <a href="@Url.Action("Details", "NewEmpQuestionair", new { id = item.EmpQuestionair_Id })">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                            </a>
                        </td>
                        <td class="tdList_PDF">
                            <a href="javascript:void(0);" onclick="fnShowDetail(@item.EmpQuestionair_Id);">
                                <i class="fa fa-file-pdf-o" aria-hidden="true"></i>
                            </a>
                        </td>
                        <td class="tdList_Approve">
                            @if (item.ApprovedBy == null && IsApprover)
                            {
                                @Html.ActionLink("Approve", "Approve", new { id = item.EmpQuestionair_Id }, new { @class = "btn btn-success" })
                            }

                        </td>
                    </tr>
                }

            </table>
        </div>
        <div>
            <br />
            @using (Html.BeginForm("Index", "NewEmpQuestionair", new { sortOrder = ViewBag.CurrentSort, searchString = ViewBag.CurrentFilter, CurrentSort = ViewBag.CurrentSort }, FormMethod.Post, new { @style = "float:left;width:80px;" }))
            {
                @Html.DropDownList("PageSize")
            }
            @{
                bool? direction = ViewBag.SortDirection;
                if (direction == null) { direction = false; }
            }
            <div class="pull-left" style=" padding:10px;">
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
            </div>

            @Html.PagedListPager(Model, page => Url.Action("Index",
                      new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter, CurrentSort = ViewBag.CurrentSort, IsAsc = !direction }))
        </div>
    </div>
</section>


<script>
    function fnShowDetail(EmpQuestionair_Id) {
        var url = "@Url.Action("NewEmpQuestionair", "NewEmpQuestionair", new { Area = "EmployeeForm" })" + "?id=" + EmpQuestionair_Id;
        popupwindow(url, 'NewEmpQuestionair', 1000, 800);
        //fnShowPopupForDetail(url);
    }
</script>

<script>
    $("#PageSize").addClass("form-control");
    $('#PageSize').on('change', function (event) {

        var form = $(event.target).parents('form');

        form.submit();
    });
</script>
