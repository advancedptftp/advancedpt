                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.Label(@item.CreatedOn.Value.GetExactValue())

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmpFirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmpLastName)
                        </td>
                        @*<td>
                        @Html.DisplayFor(modelItem => item.PositionTitle)
                    </td>*@
