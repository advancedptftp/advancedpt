                    if (result != null) {
                       
                        window.location.href = '@Url.Action("Index", "WorkingDetails")?msg=Success!...'+'&locationID='+result;
                        
                    }
                    else {
                        window.location.href = '@Url.Action("Index", "WorkingDetails")?msg=Error Occured!...';
                    }
                },
                error: function () {
                    return false;
                }
            });
        }
    });
