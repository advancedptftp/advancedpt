<script>
    $('#LocationId').addClass('form-control');
    $('#LocationId').attr("disabled", true);
    function HideValidation() {
        for (var i = 0; i < 7; i++) {
            $("#validationOPenTo_" + i + "").hide();
            $("#validationOPenFrom_" + i + "").hide();
            $("#timecompare_" + i + "").hide();            
        }
        $('#LocationSelect').hide();
        $("#AlertMoreeThenOneDay").hide();
    };
    $(document).ready(function () {
