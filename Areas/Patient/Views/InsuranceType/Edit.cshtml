                    </div>

                    <div class="col-sm-6 col-md-6 form-group">
                        <h4><label><strong>Is Active</strong></label></h4>
                        @Html.CheckBoxFor(model => model.IsActive)
                    </div>

                </div>
                <div class="subbutt">
                    <input id="btnSave" type="submit" value="Save" class="btn btn-orange pull-right"  />

                    <div class="clearfix"></div>
                </div>



                <p>@Html.ActionLink("Back to List", "Index")</p>
            }

