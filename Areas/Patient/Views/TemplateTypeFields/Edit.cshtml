@model DataLayer.Models.tblRTemplateTypeField

@{
    ViewBag.Title = "Edit";
}

@if (ViewBag.Error != null)
{
    @Html.Raw(ViewBag.Error)
}


<section class="bodyinner">
    <div class="container">
        <div class="report-form clearfix">
            <h2 class="text-center">Edit Template Type Fields Master</h2>
            <br /><br />

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.TemplateTypeFieldsMapping_Id)
                  <div class="row">
                    <div class="col-sm-6 form-group">
                        @Html.Label("Template Type")
                        @Html.DropDownList("TemplateTypeId")

                        @*@Html.DropDownListFor(e => e.TemplateTypeId, (SelectList)ViewBag.TemplateTypeId, new { @class = "form-control" })*@
                        @Html.ValidationMessageFor(model => model.TemplateTypeId)

                    </div>
                 
                </div>
                <div class="row">
                    <div class="col-sm-6 form-group">
                        @Html.Label("Template Field")
                        @Html.DropDownList("TemplateFieldsId")
                        @*@Html.DropDownListFor(e => e.TemplateFieldsId, (SelectList)ViewBag.TemplateFieldsId, new { @class = "form-control" })*@
                        @Html.ValidationMessageFor(model => model.TemplateFieldsId)


                    </div>
                    </div>
                <div class="subbutt">

                    <div class="subbutt">
                        <input type="submit" value="Save" class="btn btn-orange pull-right" />


                    </div>
</div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
</section>
