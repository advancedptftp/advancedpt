                        }

                        return "top";
                    }
   ,
                    content: function () {
                        $('#tstsde').remove();
                        return "<div id='tstsde'>Loading....</div>";

                    }
                });
            },
            error: function (e) {

            }
        });
    }
    function delete_null_properties(test, recurse) {
        for (var i in test) {
            if (test[i] === null) {
                delete test[i];
