                        <th>
                            @Html.DisplayName("CreatedOn")
                        </th>
                        
                        <th>

                        </th>
                     
                    </tr>

                </thead>



                <tbody>
                    @{
                        int i = 0;
                        foreach (var item in Model)
                        {


                            <tr class=@(i % 2 == 0 ? "sky"  : "")>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblMLocation.Location_Name)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.tblMEmployee.First_Name)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.tblMEmployee1.First_Name)
                                </td>
                                <td >
                                    @Html.DisplayFor(modelItem => item.CreatedOn)
                                </td>
                               
                                <td>
                                    <a href="@Url.Action("Edit", "EmployeeRelation", new { id = item.EmpRelation_Id })">
                                        <i class="fa fa-edit" aria-hidden="true"></i>
                                    </a>
                                    &nbsp;&nbsp;
                                    @*<a href="@Url.Action("Delete", "EmployeeRelation", new { id = item.EmpRelation_Id })">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </a>&nbsp;&nbsp;*@
                                    <a href="@Url.Action("Details", "EmployeeRelation", new { id = item.EmpRelation_Id })">
                                        <i class="fa fa-eye" aria-hidden="true"></i>
                                    </a>

                                </td>
                            </tr>
                            i++;
                        }
                    }




                </tbody>
            </table>
        </div>
        @*<div>
                <br />
                @using (Html.BeginForm("Index", "EmployeeRelation", new { sortOrder = ViewBag.CurrentSort, searchString = ViewBag.CurrentFilter, CurrentSort = ViewBag.CurrentSort }, FormMethod.Post, new { @style = "float:left;width:80px;" }))
                {
                    @Html.DropDownList("PageSize")
                }

                <div class="pull-left" style=" padding: 10px;">
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                </div>
                @{
                    bool? direction = ViewBag.SortDirection;
