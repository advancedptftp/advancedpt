@model DataLayer.Models.tblMUser

@{
    ViewBag.Title = "Create";
}

<section class="bodyinner">
    <div class="container">
        <div class="innerform">
            <div class="user-form clearfix">

                <h2 class="text-center">Create User</h2>
                @using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
                      @Html.ValidationSummary(true)
                    <p style="color:red">@TempData["errormsg"]</p>
                    <div class="col-sm-6 form-group">
                        @Html.Label("User Name")
                        @Html.TextBoxFor(model => model.UserName, new {@class="form-control" })
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                    <div class="col-sm-6 form-group">

                        @Html.LabelFor(model => model.Password, new { })
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control",type = "password" })
                        @Html.ValidationMessageFor(model => model.Password)
                        
                    </div>
                    <div class="col-sm-6 form-group">
                        @Html.LabelFor(model => model.Name, new { })
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Name)
                        
                    </div>
                    <div class="col-sm-6 form-group">
                        @Html.LabelFor(model => model.Email, new { })
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Email)
                        
                    </div>
                    <div class="col-sm-6 form-group">
                        @Html.Label("Mobile Number")
                        @Html.TextBoxFor(model => model.MobNo, new { @class = "form-control UsCellFormat", pattern = @"\d{3}[\-]\d{3}[\-]\d{4}" })
                        @Html.ValidationMessageFor(model => model.MobNo)
                        
                    </div>
                    <div class="col-sm-6 form-group">
                        @Html.LabelFor(model => model.UserRole, "User Role", new { })
                        @Html.DropDownList("UserRole","")
                        @Html.ValidationMessageFor(model => model.UserRole)
                      
                    </div>
                    <div class="col-sm-6 form-group">
                       @Html.Hidden("CreatedOn", DateTime.Now)
                       
                    </div>
                   

                    <div class="subbutt">
                        <input type="submit" id="btn-submit" value="Create" class="btn btn-orange pull-right" />
                       
                    </div>
                    <p>

                            @Html.ActionLink("Back to List", "Index")
                        
                    </p>
                }

            </div>
        </div>

        <div class="clearfix"></div>
        </div>
</section>

