@model DataLayer.Models.tblMUser

@{
    ViewBag.Title = "Edit";
}



<section class="bodyinner">
    <div class="container">
        <div class="innerform">
            <div class="user-form clearfix">

                <h2 class="text-center">Edit User</h2>
                @using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
                     @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.User_Id)
                    <div class="col-sm-6 form-group">
                        @Html.Label("User Name")
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserName)
                        
                    </div>
                    <div class="col-sm-6 form-group">
                        @Html.LabelFor(model => model.Password)
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "password" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                    <div class="col-sm-6 form-group">
                        @Html.LabelFor(model => model.Name)
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                    <div class="col-sm-6 form-group">
                        @Html.LabelFor(model => model.Email)
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                    <div class="col-sm-6 form-group">
                        @Html.Label("Mobile Number")
                        @Html.TextBoxFor(model => model.MobNo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MobNo)
                    </div>
                    <div class="col-sm-6 form-group">
                        @Html.LabelFor(model => model.UserRole, "User Role")
                        @Html.DropDownList("UserRole", String.Empty)
                        @Html.ValidationMessageFor(model => model.UserRole)
                    </div>
                    <div class="col-sm-6 form-group">
                        @*@Html.LabelFor(model => model.CreatedOn)
                        @Html.TextBoxFor(model => model.CreatedOn, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CreatedOn)*@
                       @Html.HiddenFor(model => model.CreatedOn)
                    </div>
                    <div class="col-sm-6 form-group">
                        @*@Html.LabelFor(model => model.LastLoginOn)
                        @Html.TextBoxFor(model => model.LastLoginOn, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.LastLoginOn)*@
                        @Html.Hidden("CreatedOn", DateTime.Now)
                    </div>
                    <div class="subbutt">
                        <input type="submit" value="Save" class="btn btn-orange pull-right" />
                        
                    </div>
                    <p>@Html.ActionLink("Back to List", "Index")</p>
                }

            </div>
        </div>
        </div>
        <div class="clearfix"></div>
</section>

<script>
    $('#UserRole').addClass('form-control');
</script>

