@model DataLayer.Models.tblMUserRole

@{
    ViewBag.Title = "Create";
}

<section class="bodyinner">
    <div class="container">
        <div class="innerform">
            <div class="user-form clearfix">

                <h2 class="text-center">User Role</h2>
                @using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="col-sm-6 form-group">
                        @Html.Label("User Role")
                        @Html.TextBoxFor(model => model.UserRole, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserRole)
                    </div>
                    <div class="col-sm-6 form-group">
                        @Html.LabelFor(model => model.Description)
                        @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                    <div class="col-sm-6 form-group">
                        @Html.Label("Is Super Admin")
                        @Html.EditorFor(model => model.IsSuperAdmin, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IsSuperAdmin)
                    </div>
                   
                    <div class="subbutt">
                        <input type="submit" value="Create" class="btn btn-orange pull-right" />
                    </div>
                    <p>@Html.ActionLink("Back to List", "Index")</p>
                }

            </div>
        </div>
        </div>
        <div class="clearfix"></div>
</section>

