@model IEnumerable<DataLayer.Models.tblTTreatmentRelatedVideo>
@*@using PagedList.Mvc;*@
@{
    ViewBag.Title = "PatientTestimonials";
    Layout = "~/Views/Shared/_PatientPortal.cshtml";
    //Layout = "~/Views/Shared/_LayoutPatient.cshtml";
}
<style type="text/css">
    .TreatmentVideos{
           float: left;
    width: 45%;
    text-align: center;
    padding: 13px;
    
    margin: 15px;
    border-radius: 9px;     box-shadow: 0 0 26px #ccc;
    }
        .TreatmentVideos iframe {
                width: 100%;
    height: 257px;
        }
        .videoheading {font-weight: bold;
    font-size: 18px;
    padding-bottom: 10px; min-height:60px;}

</style>

<h2>Treatment Related Videos</h2>

@if (Model != null)
{
    <div class="clearfix"></div>
    <div>
        <div class="">

            @foreach (var item in Model)
            {
                if (item.IsActive == true)
                {
                    <div id="divVideoDisplay" class="TreatmentVideos">
                        <div>
                            <div>
                                <div class="videoheading"> @Html.DisplayFor(e => item.VideoDesc)</div>
                                <iframe src="@item.VideoLink" width="300" height="200" frameborder="0" allowfullscreen></iframe>
                            </div>
                        </div>
                    </div>
                }

            }

            <div class="clearfix"></div>

        </div>

    </div>
    <div class="container"></div>
}
